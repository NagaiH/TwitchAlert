{
  "name": "Twitch Alert",
  "version" : "0.1",
  "manifest_version": 2,

  "description" : "気になるTwitchの放送をポップアップ表示！",
  "permissions" :[
    "tabs",
    "http://*/*",
    "https://*/*"

  ],

  "content_security_policy": "script-src 'self' https://api.twitch.tv; object-src 'self'",

  "browser_action" :{
    "default_icon" : "twitch.png",
    "default_title" : "test",
    "default_popup": "popup.html"
  }
}
